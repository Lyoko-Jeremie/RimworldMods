<Patch>

  <!--纳米无菌地板-->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/TerrainDef[defName="HKJ_SterileTile"]/affordances</xpath>
    <value>
      <li>Walkable</li>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/TerrainDef[defName="HKJ_SterileTile"]/statBases/Beauty</xpath>
    <value>
      <Beauty>1000</Beauty>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/TerrainDef[defName="HKJ_SterileTile"]/statBases/WorkToBuild</xpath>
    <value>
      <WorkToBuild>1</WorkToBuild>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/TerrainDef[defName="HKJ_SterileTile"]/costList</xpath>
    <value>
      <costList>
        <Steel>1</Steel>
      </costList>
    </value>
  </Operation>

</Patch>

